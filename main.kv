                    md_bg_color:"white"
                    width:app.size_x/1.2
                    size_hint_x:None
                    pos_hint:{"center_x":.5, "center_y":.9}
                    radius:dp(5)
                    MDLabel:
                        id: story_label
                        text: app.account_link  # Your story text goes here
                        theme_text_color: "Custom"
                        text_color: "black"
                        font_style: "Body1"
                        halign: "center"
                        size_hint_y: None
                        height: self.texture_size[1]
                        pos_hint: {"center_x": .5, "center_y": .5}
                MDTextField:
                    id:sms_edit
                    mode: "round"
                    hint_text:app.edit_hint
                    size_hint_x:.8
                    pos_hint:{"center_x":.5, "center_y":.78}
                    font_size: dp(18)
                    foreground_color: 53 / 225, 59 / 225, 60 / 225, 1
                    line_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    fill_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    hint_text_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    text_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    halign: 'left'
                    on_text:
                        app.account_link = sms_edit.text

                MDRaisedButton:
                    text:"Save"
                    md_bg_color:  "black"
                    text_color: "#FFFFFF"
                    size_hint:.5,.08
                    pos_hint:{"center_x":.5, "center_y":.64}
                    on_release:
                        app.add_save_account()

    MDScreen:
        name: "profile"
        md_bg_color: "#eaf4f4"
        MDBoxLayout:
            orientation: "vertical"
            MDTopAppBar:
                title:"Profile"
                elevation: 3
                md_bg_color: "#eaf4f4"
                specific_text_color: "black"

#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name: "login"

        MDFloatLayout:
            # Background color or image
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  # Light grey background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Welcome Text
            MDLabel:
                text: "Welcome Back"
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": .5, "center_y": .8}
                theme_text_color: "Custom"
                text_color: "#0B4F6C"

            # Google Logo and Login Button
            MDFillRoundFlatIconButton:
                text: "  Sign in with Google"
                icon: "google"  # Icon from MDIcon
                icon_left: True
                md_bg_color: "#0B4F6C"
                text_color: "#FFFFFF"
                size_hint: .7, .08
                pos_hint: {"center_x": .5, "center_y": .4}
                font_size: "18sp"
                radius: [25, 25, 25, 25]
                on_release:
                    app.login()
    MDScreen:
        name:"home"
        md_bg_color:"#eaf4f4"
        MDBoxLayout:
            orientation:"vertical"
            spacing:dp("10")
            MDTopAppBar:
	            title: "Contacts"
	            elevation: 0
	            md_bg_color: "#eaf4f4"
	            specific_text_color: "black"
	            right_action_items: [["account-plus", lambda x: app.add_from_contact()]]
            RecycleView:
                id:contact
                key_viewclass: 'viewclass'
                key_size: 'height'
                RecycleBoxLayout:
                    id:wali
                    spacing:dp(10)
                    padding: dp(10)
                    default_size: None, dp(70)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation:"vertical"

    MDScreen:
        name:"profile"
        MDBoxLayout:
            orientation:"vertical"
            spacing:dp("10")
            MDTopAppBar:
	            title: "Contacts"
	            elevation: 0
	            md_bg_color: "#eaf4f4"
	            specific_text_color: "black"
			MDFloatLayout:

<Contacts>:
	text: root.name
	ImageLeftWidget:
	    source:root.image

#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name: "login"
        MDFloatLayout:
            # Background color or image
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  # Light grey background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Welcome Text
            MDLabel:
                text: "Welcome Back"
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": .5, "center_y": .8}
                theme_text_color: "Custom"
                text_color: "#0B4F6C"

            # Google Logo and Login Button
            MDFillRoundFlatIconButton:
                text: "  Sign in with Google"
                icon: "google"  # Icon from MDIcon
                icon_left: True
                md_bg_color: "#0B4F6C"
                text_color: "#FFFFFF"
                size_hint: .7, .08
                pos_hint: {"center_x": .5, "center_y": .4}
                font_size: "18sp"
                radius: [dp(25), dp(25), dp(25), dp(25)]
                on_release:
                    app.login()
    MDScreen:
        name: "home"
        md_bg_color: "#eaf4f4"
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp("10")
            MDTopAppBar:
                title:"Contacts"
                elevation: 3
                md_bg_color: "#eaf4f4"
                specific_text_color: "black"
                right_action_items: [["account-circle-outline", lambda x: app.screen_capture("profile")]]
            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(56)  # Height of the search bar
                padding:sp(10)

                # Round Text Field for searching
                MDTextField:
                    id: search_field
                    hint_text: "Search Contacts"
                    size_hint_x: 0.85  # Adjust size for the text field
                    size_hint_y: 1.1  # Adjust size for the text field
                    mode: "round"  # Rounded design
                    pos_hint: {"center_y": 0.5}
                    background_color: [1, 1, 1, 1]  # White background
                    line_color: [0, 0, 0, 0]  # Hide the underline
                    hint_text_color_normal: [0.7, 0.7, 0.7, 1]  # Light grey hint text
                    hint_text_color_focus: [0.4, 0.4, 0.4, 1]  # Darker grey when focused
                    text_color: [0, 0, 0, 1]  # Black text color
                    padding: sp(10), sp(5)
                    on_text: app.search_contacts(self.text)  # Call search function on text change

                # Search Icon Button
                MDIconButton:
                    icon: "magnify"# Magnifying glass icon
                    pos_hint: {"center_y": 0.5}
                    on_release:
                        print(app.user_data)
#                        app.search_contacts(search_field.text)  # Call search function on button click

            RecycleView:
                id: contact
                key_viewclass: 'viewclass'
                key_size: 'height'
                RecycleBoxLayout:
                    id: wali
                    spacing: dp(10)
                    padding: dp(10)
                    default_size: None, dp(70)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"
    MDScreen:
        name: "edit_link"
        MDBoxLayout:
            orientation: "vertical"
            MDTopAppBar:
                title:"Edit Link"
                elevation: 3
                md_bg_color: "#eaf4f4"
                specific_text_color: "black"
            Widget:
                size_hint_y: None
                height: dp(30)
            MDFloatLayout:
                orientation: "vertical"
                md_bg_color: "white"
                spacing: dp(20)
                # Text Field for entering the link
                Card:
                    on_release:
                        app.open_link(app.link_url)
                    id: preview_card
                    orientation: "vertical"
                    size_hint: 0.9, None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.5, "center_y":.75}
                    padding: dp(10)
                    radius: [dp(15), dp(15), dp(15), dp(15)]
                    elevation: 3
                    md_bg_color: "#eaf4f4"

                    # WhatsApp image at the top
                    FitImage:
                        source: app.link_image  # Use the dynamic image source from the link preview
                        size_hint_y: None
                        height: dp(80)
                        pos_hint: {"center_x": 0.5}
                        radius: [dp(15), dp(15), dp(0), dp(0)]

                    # Title and description in a vertical box
                    MDBoxLayout:
                        orientation: "vertical"
                        padding: dp(10)
                        spacing: dp(5)
                        size_hint_y: None
                        height: self.minimum_height  # This will allow the layout to grow as text is added.
                        pos_hint:{"center_x":.5, "center_y":.7}
                        radius:dp(5)

                        MDLabel:
                            text: app.link_title
                            font_style: "Subtitle2"
                            theme_text_color: "Primary"
                            halign: "left"
                            size_hint_y: None
                            height: self.texture_size[1]

                        # Description of the link preview
                        MDLabel:
                            text: app.link_description
                            font_style: "Body2"
                            theme_text_color: "Secondary"
                            halign: "left"
                            size_hint_y: None
                            height: self.texture_size[1]

                    # Footer containing the domain and URL at the bottom of the card
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: dp(30)
                        padding: [dp(10), 0, dp(10), 0]

                        # Domain or site name
                        MDLabel:
                            text: app.link_domain
                            font_style: "Caption"
                            theme_text_color: "Hint"
                            halign: "left"
                            size_hint_x: 0.7

                        # The URL link itself
                        MDLabel:
                            text: app.link_url
                            font_style: "Caption"
                            theme_text_color: "Hint"
                            halign: "right"
                MDTextField:
                    id: link_field
                    hint_text:app.edit_hint
                    size_hint_x:.8
                    pos_hint:{"center_x":.5, "center_y":.45}
                    font_size: dp(18)
                    foreground_color: 53 / 225, 59 / 225, 60 / 225, 1
                    line_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    fill_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    hint_text_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    text_color_focus: 53 / 225, 59 / 225, 60 / 225, 1
                    halign: 'left'
                    on_text:
                        app.opt_preview()  # Fetch preview on Enter key
                        app.account_link = link_field.text

                # Save Button
                MDRaisedButton:
                    text:"Save"
                    md_bg_color:  "black"
                    text_color: "#FFFFFF"
                    size_hint:.5,.08
                    pos_hint:{"center_x":.5, "center_y":.3}
                    on_release:
                        app.account_link = link_field.text
                        app.add_save_account()

    MDScreen:
        name:"edit_phone"
        MDBoxLayout:
            orientation: "vertical"
            spacing: dp("10")
            MDTopAppBar:
                title:"Edit phone"
                elevation: 3
                md_bg_color: "#eaf4f4"
                specific_text_color: "black"
            MDFloatLayout:
                md_bg_color:"#eaf4f4"

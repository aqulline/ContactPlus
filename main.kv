                    # User's profile picture
                    FitImage:
                        source: app.user_pic
                        size_hint: None, None
                        size: "100dp", "100dp"
                        pos_hint: {"center_x": 0.5}
                        radius: [dp(50), dp(50), dp(50), dp(50)]

                    # User's name
                    MDLabel:
                        text: app.user_name
                        halign: "center"
                        font_style: "H6"
                        theme_text_color: "Primary"
                        pos_hint: {"center_x": 0.5}

                    # User's email
                    MDLabel:
                        text: app.user_email
                        halign: "center"
                        font_style: "Subtitle2"
                        theme_text_color: "Secondary"

#:import sm kivy.uix.screenmanager
ScreenManager:
    id:manager
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        name: "login"

        MDFloatLayout:
            # Background color or image
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  # Light grey background
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Welcome Text
            MDLabel:
                text: "Welcome Back"
                halign: "center"
                font_style: "H5"
                pos_hint: {"center_x": .5, "center_y": .8}
                theme_text_color: "Custom"
                text_color: "#0B4F6C"

            # Google Logo and Login Button
            MDFillRoundFlatIconButton:
                text: "  Sign in with Google"
                icon: "google"  # Icon from MDIcon
                icon_left: True
                md_bg_color: "#0B4F6C"
                text_color: "#FFFFFF"
                size_hint: .7, .08
                pos_hint: {"center_x": .5, "center_y": .4}
                font_size: "18sp"
                radius: [25, 25, 25, 25]
                on_release:
                    app.login()

            # Spinner for loading feedback (can be hidden initially)
            MDSpinner:
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {"center_x": .5, "center_y": .3}
                active: False  # Set to True on button click to show feedback
                color: "#0B4F6C"

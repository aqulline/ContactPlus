                            app.view_account_details(self.icon)

                    # LinkedIn Icon
                    MDIconButton:
                        icon: "linkedin"
                        user_font_size: "24sp"
                        on_release:
                            app.view_account_details(self.icon)

                    # YouTube Icon
                    MDIconButton:
                        icon: "twitter"
                        user_font_size: "24sp"
                        on_release:
                            app.view_account_details(self.icon)

                    MDIconButton:
                        icon: "web"
                        user_font_size: "24sp"
                        on_release:
                            app.view_account_details(self.icon)

